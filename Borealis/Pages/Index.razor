                                   Icon="@(Icons.Material.Filled.Info)" Variant="@(Variant.Filled)" Size="@(Size.Large)" DisableElevation="true" />
                    <MudIconButton ButtonType="@(ButtonType.Button)" Title="Delete" Color="Color.Warning"
                                   Icon="@(Icons.Material.Filled.DeleteForever)" Variant="@(Variant.Filled)" Size="@(Size.Large)" DisableElevation="true" />
                </MudStack>
            </MudCardActions>
        </MudCard>
