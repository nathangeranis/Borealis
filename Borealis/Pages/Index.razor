    <MudItem xs="2" sm="2" md="2" lg="2">
        <MudCard>
            <MudCardMedia Image="/Resources/Images/dotnet_bot.svg" Height="128" />
            <MudCardContent>
                <MudText Typo="Typo.h6">Character Name</MudText>
                <MudText Typo="Typo.body2">Level</MudText>
                <MudText Typo="Typo.body2">Race</MudText>
                <MudText Typo="Typo.body2">Class</MudText>
                <MudDivider></MudDivider>
            </MudCardContent>
            <MudCardActions>
                <MudStack Row="true" AlignItems="@(AlignItems.Stretch)" Justify="@(Justify.SpaceAround)" Style="width:100%;">
                    <MudIconButton ButtonType="@(ButtonType.Button)" Title="Character Sheet" Color="Color.Primary"
                                   Icon="@(Icons.Material.Filled.ContactPage)" Variant="@(Variant.Filled)" Size="@(Size.Large)" DisableElevation="true" />
