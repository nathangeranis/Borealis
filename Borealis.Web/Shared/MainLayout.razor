@inherits LayoutComponentBase
<MudThemeProvider Theme="_theme.Theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Dense="true" Elevation="2">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        <MudSpacer />
        <MudText Typo="Typo.h5" Align="Align.Center" Inline="true" Color="Color.Surface" Class="white-header-text">Borealis</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="_theme.DrawerElevation" ClipMode="_theme.DrawerClipMode" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" MiniWidth="3.25rem">
        <MudNavMenu>
            <MudNavLink Href="/Home" Icon="@Icons.Filled.Home">Home</MudNavLink>
            <MudNavGroup Title="Character" Icon="@Icons.Filled.Person" HideExpandIcon="true">
                <MudNavLink Href="/Character/Create" Icon="@Icons.Filled.PersonAddAlt1">Character Creation</MudNavLink>
                <MudNavLink Href="/Character/Characters" Icon="@Icons.Filled.Groups">Characters</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="World Building" Icon="@Icons.Filled.Public" HideExpandIcon="true">
                <MudNavLink Href="/World/Story" Icon="@Icons.Filled.MenuBook">Story</MudNavLink>
                <MudNavLink Href="/World/Lore" Icon="@Icons.Filled.Forest">Lore</MudNavLink>
                <MudNavLink Href="/World/Maps" Icon="@Icons.Filled.Map">Maps</MudNavLink>
                <MudNavLink Href="/World/Characters" Icon="@Icons.Filled.Group">Characters</MudNavLink>
                <MudNavLink Href="/World/Monsters" Icon="fas fa-dragon">Monsters</MudNavLink>
                <MudNavLink Href="/World/Encounters" Icon="fas fa-hand-fist">Encounters</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Settings" Icon="@Icons.Filled.Settings" HideExpandIcon="true" Style="align-self:flex-end;">
                <MudNavLink Href="/Settings/Theme" Icon="@Icons.Filled.Palette">Theme</MudNavLink>
                <MudNavLink Href="/Settings/Content" Icon="@Icons.Filled.MenuBook">Content</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Fixed="true">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    ThemeOptions _theme;
    bool _drawerOpen = false;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    protected override void OnInitialized()
    {
        _theme = ThemeUtility.LoadTheme();
    }
}