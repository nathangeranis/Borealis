<MudCard Elevation="5" Style="width:18rem;">
    <MudCardMedia Image="/images/silhouette-head.png" Style="height:12.5rem; background-size:contain; position:relative; top:0.5rem;" />
    <MudDivider DividerType="@(DividerType.Middle)" Style="background-color:black;"></MudDivider>
    <MudCardContent Style="padding-bottom:0; padding-top:0;">
        <MudText Typo="Typo.h6">Character Name</MudText>
        <MudText Typo="Typo.body2">Level</MudText>
        <MudText Typo="Typo.body2">Race</MudText>
        <MudText Typo="Typo.body2">Class</MudText>
        <MudDivider></MudDivider>
    </MudCardContent>
    <MudCardActions>
        <MudStack AlignItems="@(AlignItems.Stretch)" Spacing="2" Style="width:100%;">
                <MudButton Color="Color.Primary" Variant="@(Variant.Filled)" Size="@(Size.Small)">Character Sheet</MudButton>
                <MudButton Color="Color.Info" Variant="@(Variant.Filled)" Size="@(Size.Small)">Info</MudButton>
                <MudButton Color="Color.Warning" Variant="@(Variant.Filled)" Size="@(Size.Small)">Delete Character</MudButton>
        </MudStack>
    </MudCardActions>
</MudCard>
